<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>


<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.arabicsearchengine.controllers.MainController">

<top>
    <Label text="Arabic Morphological Search Engine"
           style="-fx-font-size:18px; -fx-padding:10;" />
</top>

<center>
    <VBox spacing="10" alignment="CENTER">
        <Button text="Manage Roots" onAction="#openRoots"/>
        <Button text="Manage Patterns" onAction="#openPatterns"/>
        <Button text="Generate Word" onAction="#openGenerate"/>
        <Button text="Validate Word" onAction="#openValidate"/>
    </VBox>
</center>

</BorderPane>